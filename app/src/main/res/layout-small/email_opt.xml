<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Email_Options">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rel_lay_email"
            android:orientation="vertical">
            <TextView
                android:id="@+id/email_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Please enter the email to send the files to:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/email_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:inputType="textEmailAddress"/>
            <TextView
                android:id="@+id/blank_text_0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/attach_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Please tick the files that you want to attach:"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
